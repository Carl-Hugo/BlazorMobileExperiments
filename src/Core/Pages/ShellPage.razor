@inherits MyComponent

<Shell>
    <FlyoutHeader>
        <StackLayout>
            <Label Text="Some cool title!" class="app-menu-header" />
        </StackLayout>
    </FlyoutHeader>
    <ChildContent>
        <StyleSheet Resource="App.css" Assembly="GetType().Assembly" />
        <ShellContent Route="@Core.Features.Navs.Constants.Home" Title="Home">
            <HelloWorld />
        </ShellContent>
        <ShellContent Route="@Core.Features.Navs.Constants.Empty" Title="Empty">
            <ContentPage>
                <StackLayout>
                    <Label Text="This is an Empty page!" />
                </StackLayout>
