    Color ProgressColor => CounterState.Count < 0 ? Color.Red : Color.Green;
    double ProgressValue => Math.Abs(CounterState.Count) / 10.0;
    bool IsLoading { get; set; } = true;
    bool IsVisible { get; set; } = true;

    double SliderValue { get; set; }
