@inherits MyComponent
@using Core.Features.Counter
@using Core.Features.Errors

<ContentPage>
    <StackLayout Margin="new Thickness(20)">

        <Label Text="@("Hello, World (" + Count + ")!")" FontSize="40" />
        <Counter />
        <CounterBad />
        <Throw />
        <Button Text="Go to Page 2" OnClick="async () => await this.GoToPage2Async()" />

    </StackLayout>
</ContentPage>

@code{
    CounterState CounterState => GetState<CounterState>();
    int Count => CounterState.Count;
}